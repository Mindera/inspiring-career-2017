<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <property name="LOGGING_DIR" value="${logging.dir:-log}" />
    <property name="FILENAME" value="${HOSTNAME:-localhost}" />
    <property name="FILE_MAX_SIZE" value="${logging.file.maxSize:-50MB}" />
    <property name="FILE_MAX_COUNT" value="${logging.file.maxCount:-5}" />

    <property name="FORMAT" value="${logging.format:-%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n}" />
    <property name="FORMAT_TRANSACTION" value="${logging.transaction.format:-%d{yyyy-MM-dd HH:mm:ss.SSSSSXXX} %msg%n}" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>

        <encoder>
            <pattern>${FORMAT}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGGING_DIR}/${FILENAME}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>${LOGGING_DIR}/${FILENAME}.%i.log</FileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>${FILE_MAX_COUNT}</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${FILE_MAX_SIZE}</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>${FORMAT}</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STASH" />
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </appender>

    <root level="${logging.level:-INFO}">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
        <appender-ref ref="STASH" />
    </root>
</configuration>